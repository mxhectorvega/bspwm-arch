		inactive_workspace #141414         #141414          #8f8f8f
	        urgent_workspace   #141414         #141414          #f00000
        }
}

# Gestor de portapapeles para Dmenu y Rofi github.com/erebe/greenclip
bindsym $mod+p exec greenclip print | sed '/^$/d' | dmenu -i -l 10 -p clipboard | xargs -r -d'\n' -I '{}' greenclip print '{}' 

# Atajos para acaptura de pantalla, es necesario tener instalado los paquetes xclip y maim
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png # Captura de pantalla en area seleccionada
bindsym Crtl+Print exec maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png # Captura de pantalla en ventana activa
bindsym Print exec maim | xclip -selection clipboard -t image/png # Captura de pantalla completa

