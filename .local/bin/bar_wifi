#!/bin/sh


# cambiar las interfaces en caso de tener otro hardware ejemplo wlan0, wlo etc etc.
LOCO=$(ip ad | awk '/state UP/ { print $2 }' | cut -d":" -f1)
if [ ${LOCO} == "wlan0" ]
then
icono=""
ssid=$(cat /proc/net/wireless | awk 'NR==3 {printf "%0.0f%%\n", $3/70*100}')
#ssid=$(iwgetid -r)
elif [[ ${LOCO} =~ "enp0s25" ]]
then
icono""
ssid="Red"
else
icono=""
ssid="N/A"
fi
echo "$ssid"
